@using NewAfrica.Models
@model ITEM
@{
    ViewBag.Title = "DetailItem";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    List<SOUSFAMILL> listsf = ViewBag.listsf;
}

<div class="row">
    @if (Model.path1 != null)
    {
        <div class="col-md-4">
            <div class="card">
                <img src="~/Content/images/@Model.path1" class="card-img-top" alt="card">
                <div class="card-body">
                    <h5 class="card-title">Image 1. @Model.designation</h5>

                    <div class="form-group">
                        <label for="libprod">Nom du produit</label>
                        <input type="text" class="form-control" id="libprod" placeholder="@Model.designation" value="@Model.designation">
                    </div>
                    <div class="form-group">
                        <label for="detailprod">Description</label>
                        <textarea class="form-control" id="detailprod" rows="3">@Model.designdetails</textarea>
                    </div>
                    <div class="form-group">
                        <label for="categitem">Catégorie : </label>
                        <select class="form-control" id="categprod">
                            @foreach (SOUSFAMILL sf in listsf.AsEnumerable())
                            {
                                if (sf.idsf == Model.idsf)
                                {<option value="@sf.idsf" selected>@sf.libsf</option>}
                                else
                                {<option value="@sf.idsf">@sf.libsf</option>}

                            }
                        </select>
                    </div>
                    <button class="btn btn-primary" onclick="UpdateImg(1,'@Model.path1', document.getElementById('libprod').value, document.getElementById('detailprod').value, document.getElementById('categprod').value)">Modifier</button>
                </div>
            </div>
        </div>
    }
    @if (Model.path2 != null)
    {
        <div class="col-md-4">
            <div class="card">
                <img src="~/Content/images/@Model.path2" class="card-img-top" alt="card">
                <div class="card-body">
                    <h5 class="card-title">Image 2. @Model.designation</h5>
                    <button class="btn btn-primary" onclick="UpdateImg(2,'@Model.path2', document.getElementById('libprod').value, document.getElementById('detailprod').value, document.getElementById('categprod').value)">Modifier</button>
                </div>
            </div>
        </div>
    }
</div>

<div class="modal fade" id="_updateimg">
    <div class="modal-dialog modal-lg">
        <div Class="modal-content">
            <div Class="modal-header">
                <h6 Class="modal-title" id="lib">Modifier une image</h6>
                <Button type="button" Class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </Button>
            </div>
            <div Class="modal-body">
                <form action="@Url.Action("UpdateProd","Admin")" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" class="form-control" id="iditem" name="idprod" value="@Model.iditem" hidden required />
                        <input type="text" class="form-control" id="libcateg" name="designation" />
                        <input type="text" class="form-control" id="detcateg" name="detailsprod" />
                        <input type="hidden" class="form-control" id="categitem" name="idcateg" />
                        <input type="hidden" class="form-control" id="numimage" name="numimg" required />
                        <input type="hidden" class="form-control" id="oldpathimg" name="oldpath" required />


                        <input type="hidden" class="form-control" name="typfile" value="@ViewBag.type" />
                        <input type="file" class="form-control" name="fileimg" />
                    </div>
                    <div class="row-fluid float-right">
                        <Button type="button" Class="btn btn-danger mr-2" data-dismiss="modal">Fermer</Button>
                        <Button type="submit" Class="btn btn-success">Valider</Button>
                    </div>

                </form>

            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

@section scripts
    {
    <script>
        function UpdateImg(numimg, oldpath, libcat, detailcat, idcategitem) {
            $("#numimage").val(numimg);
            $("#oldpathimg").val(oldpath);
            $("#_updateimg").modal('show');
            $("#libcateg").val(libcat);
            $("#detcateg").val(detailcat);
            $("#categitem").val(idcategitem);
        }
    </script>
}