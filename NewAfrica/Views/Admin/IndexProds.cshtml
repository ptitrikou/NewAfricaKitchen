@using NewAfrica.ViewModels
@model List<ItemVm>

@{
    ViewBag.Title = "IndexProds";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    int num = 1;
}

<!-- Web Statistics -->
<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center justify-content-between flex-wrap flex-md-nowrap">
            <div class="dsh-section-title">
                <h5 class="card-title">Données Administrateur de votre Site web</h5>
                <h6 class="card-subtitle">Modification des articles</h6>
            </div>
        </div>

        <button type="button" class="btn btn-primary-light mb-3" data-toggle="modal" data-target="#exampleModalCenter">
            Add a product
        </button>

        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalCenterTitle">Ajouter un produit</h5>
                        <button type="button" class="dsh-close close-dark" data-dismiss="modal" aria-label="Fermer">
                            <span></span>
                            <span></span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="defaultInput">Nom du produit</label>
                            <input type="text" class="form-control" id="libcat" placeholder="" value="">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlTextarea1">Description</label>
                            <textarea class="form-control" id="detailcat" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-light" data-dismiss="modal">Fermer</button>
                        <button type="button" class="btn btn-primary">Enrégistrer</button>
                    </div>
                </div>
            </div>
        </div>

        <!--Tableau d'images'-->
        <table id="list_items" class="table table-bordered">
            <thead>
                <tr>
                    <th>N°</th>
                    <th>Catégorie</th>
                    <th>Libellé du produit</th>
                    <th>Description</th>
                    <th>Prix</th>
                    <th>Image 1</th>
                    <th>Image 2</th>
                    <th>Image 3</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var prod in Model)
                    {
                        <tr>
                            <td align="center" width="30px">@(num++)</td>
                            <td>@prod.libsf</td>
                            <td>@prod.designation</td>
                            <td>@prod.designdetails</td>
                            <td>@prod.prixitem</td>
                            <td><img src="~/Content/images/@prod.path1" style="height:auto;width:auto" alt=""></td>
                            <td><img src="~/Content/images/@prod.path2" style="height:auto;width:auto" alt=""></td>
                            <td><img src="~/Content/images/@prod.path3" style="height:auto;width:auto" alt=""></td>
                            <td width="10px"><a href="@Url.Action("DetailProd","Admin",new {idprod=prod.iditem})" onclick=""><i class="fas fa-edit blue" style="color:#0069d9"></i></a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>



@section scripts
    {
    <!-- Page Specific Scripts -->
    <script src="~/Content/Layouts/Dashield/vendor/js/datatables.min.js"></script>
    <script src="~/Content/Layouts/Dashield/responsive.js"></script>

    <script type="text/javascript">
        //Confirmation - Nouveau client
        if ('@TempData["modifimg"]' == "success"){
            Swal.fire({
                text: "Categorie modifiée avec succès.",
                icon: "success",
                buttonsStyling: !1,
                confirmButtonText: "Ok",
                customClass: { confirmButton: "btn btn-primary" }
            })
        }
        if ('@TempData["modifimg"]' == "fail"){
            Swal.fire({
                text: "Erreur lors de la modification de l'image.",
                icon: "error",
                buttonsStyling: !1,
                confirmButtonText: "Ok",
                customClass: { confirmButton: "btn btn-primary" }
            })
        }
    </script>
    }
