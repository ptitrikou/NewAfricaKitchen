@using NewAfrica.Models
@model ITEM
@{
    ViewBag.Title = "Modifier un article";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    List<SOUSFAMILL> listsf = ViewBag.listsf;
}

<div class="row">
    @if (Model.path1 != null)
    {
        <div class="col-md-4">
            <div class="card">
                <img src="~/Content/images/@Model.path1" class="card-img-top" alt="card">
                <div class="card-body">
                    <h5 class="card-title">Image 1. @Model.designation</h5>
                    <div class="form-group">
                        <label for="categitem">Catégorie : </label>
                        <select class="form-control" id="categitem">
                            @foreach (SOUSFAMILL sf in listsf.AsEnumerable())
                            {
                                if (sf.idsf == Model.idsf)
                                {
                                    <option value="@sf.idsf" selected>@sf.libsf</option>
}
                                else
                                {
                                    <option value="@sf.idsf">@sf.libsf</option>
}

                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="defaultInput">Nom du produit</label>
                        <input type="text" class="form-control" id="libitem" placeholder="@Model.path1" value="@Model.designation">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Description</label>
                        <textarea class="form-control" id="detailsitem" rows="3">@Model.designdetails</textarea>
                    </div>
                    <button class="btn btn-primary" onclick="UpdateProd(1, '@Model.path1', document.getElementById('libitem').value,document.getElementById('detailsitem').value, document.getElementById('categitem').value">Modifier</button>
                </div>
            </div>
        </div>
    }

    <div class="modal fade" id="_majitem">
    <div class="modal-dialog modal-lg">
        <div Class="modal-content">
            <div Class="modal-header">
                <h6 Class="modal-title" id="lib">Modifier une image</h6>
                <Button type="button" Class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </Button>
            </div>
            <div Class="modal-body">
                <form action="@Url.Action("UpdateProd","Admin")" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" class="form-control" name="idprod" value="@Model.iditem" hidden required />
                        <input type="hidden" class="form-control" id="numimage" name="numimg" required />
                        <input type="hidden" class="form-control" id="oldpathimg" name="oldpath" required />
                        <input type="text" class="form-control" id="categprod" name="idcateg" />
                        <input type="text" class="form-control" id="nomprod" name="designation" />
                        <input type="text" class="form-control" id="detprod" name="detailsprod" />
                        <input type="hidden" class="form-control" name="typfile" value="@ViewBag.type" />
                        <input type="file" class="form-control" name="fileimg" />

                    </div>
                    <div class="row-fluid float-right">
                        <Button type="button" Class="btn btn-danger mr-2" data-dismiss="modal">Fermer</Button>
                        <Button type="submit" Class="btn btn-success">Valider</Button>
                    </div>

                </form>

            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

@section scripts
    {
    <script>
        function UpdateProd(numimg, oldpath,nomitem, detitem) {
            $("#numimage").val(numimg);
            $("#oldpathimg").val(oldpath);
            $("#nomprod").val(nomitem);
            $("#detprod").val(detitem);
            $("#_majitem").modal('show');
        }
    </script>
}
