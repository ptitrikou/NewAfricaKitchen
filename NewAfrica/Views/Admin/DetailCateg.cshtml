@using NewAfrica.Models
@model SOUSFAMILL
@{
    ViewBag.Title = "DetailItem";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    @if (Model.imgsf != null)
    {
        <div class="col-md-4">
            <div class="card">
                <img src="~/Content/images/@Model.imgsf" class="card-img-top" alt="card">
                <div class="card-body">
                    <h5 class="card-title">Image 1. @Model.libsf</h5>
                    
                    <div class="form-group">
                        <label for="defaultInput">Nom de la catégorie</label>
                        <input type="text" class="form-control" id="libcat" placeholder="@Model.libsf" value="@Model.libsf">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Description</label>
                        <textarea class="form-control" id="detailcat" rows="3">@Model.detsf</textarea>
                    </div>
                    <button class="btn btn-primary" onclick="UpdateImg(1,'@Model.imgsf2', document.getElementById('libcat').value, document.getElementById('detailcat').value)">Modifier</button>
                </div>
            </div>
        </div>
    }
    @if (Model.imgsf2 != null)
    {
        <div class="col-md-4">
            <div class="card">
                <img src="~/Content/images/@Model.imgsf2" class="card-img-top" alt="card">
                <div class="card-body">
                    <h5 class="card-title">Image 2. @Model.libsf</h5>
                    <button class="btn btn-primary" onclick="UpdateImg(2,'@Model.imgsf2', document.getElementById('libcat').value, document.getElementById('detailcat').value)">Modifier</button>
                </div>
            </div>
        </div>
    }
</div>

<div class="modal fade" id="_updateimg">
    <div class="modal-dialog modal-lg">
        <div Class="modal-content">
            <div Class="modal-header">
                <h6 Class="modal-title" id="lib">Modifier une image</h6>
                <Button type="button" Class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </Button>
            </div>
            <div Class="modal-body">
                <form action="@Url.Action("UpdateCateg","Admin")" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" class="form-control" id="idcateg" name="idcateg" value="@Model.idsf" hidden required />
                        <input type="hidden" class="form-control" id="numimage" name="numimg" required />
                        <input type="hidden" class="form-control" id="oldpathimg" name="oldpath" required />
                        <input type="text" class="form-control" id="libcateg" name="libcateg" />
                        <input type="text" class="form-control" id="detcateg" name="detcateg" />
                        <input type="hidden" class="form-control" name="typfile" value="@ViewBag.type" />
                        <input type="file" class="form-control" name="fileimg" />
                    </div>
                    <div class="row-fluid float-right">
                        <Button type="button" Class="btn btn-danger mr-2" data-dismiss="modal">Fermer</Button>
                        <Button type="submit" Class="btn btn-success">Valider</Button>
                    </div>

                </form>

            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

@section scripts
    {
    <script>
        function UpdateImg(numimg, oldpath, libcat, detailcat) {
            $("#numimage").val(numimg);
            $("#oldpathimg").val(oldpath);
            $("#_updateimg").modal('show');
            $("#libcateg").val(libcat);
            $("#detcateg").val(detailcat);
        }
    </script>
}